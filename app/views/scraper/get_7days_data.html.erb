<div class="filter-links">
  <a href="/get_7days_data">Filter last 7 day sales</a>
  <a href="/get_30days_data">Filter last 30 day sales</a>
</div>
<a href="/get_7days_data.csv"><button class="btn btn-success">Download to CSV</button></a>
<table>
  <tr>
    <th>ID</th>
    <th>Address</th>
    <th>Home Details</th>
    <th>Price</th>
    <th>Date</th>
  </tr>

  <% @seven_day_data.each do |scraper| %>
    <tr>
      <td><%= scraper.id %></td>
      <td><%= scraper.address %></td>
      <td><%= scraper.home_details %></td>
      <td><%= scraper.price %></td>
      <td><%= scraper.date %></td>
    </tr>
  <% end %>
</table>
